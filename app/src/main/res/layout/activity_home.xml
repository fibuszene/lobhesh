<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_wheather"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00BCD4"
    android:orientation="vertical"
    tools:context="com.example.android.lobhesh.MainActivity">

    <TextView
        android:id="@+id/location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="bhopal,IN"
        android:textSize="40sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/location"
        android:layout_marginTop="10dp"
        android:layout_weight="0.27"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:paddingLeft="70dp"
            android:text="23.6 ,"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/lan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:paddingLeft="20dp"
            android:text="78.78"
            android:textSize="30sp" />

    </LinearLayout>


    <ImageView
        android:id="@+id/suni"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:src="@drawable/sun" />

    <TextView
        android:id="@+id/temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="180dp"
        android:text="temp"
        android:textColor="@android:color/white"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/humidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/temp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/suni"
        android:text="humdity"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/min_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/suni"
        android:layout_marginLeft="50dp"
        android:text="min Temp"
        android:textColor="#FFFF00"
        android:textSize="30sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/max_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/min_temp"
        android:layout_marginLeft="200dp"
        android:text="max temp"
        android:textColor="#FFFF00"
        android:textSize="30sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/pressure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/min_temp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="20dp"
        android:text="pressure"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/windspeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/pressure"
        android:layout_marginLeft="160dp"
        android:text="wind"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/weatherType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/pressure"
        android:layout_marginLeft="260dp"
        android:text="clear"
        android:textSize="30sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pressure"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/pressure" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/windspeed"
        android:layout_marginLeft="150dp"
        android:src="@drawable/windspeed" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/weatherType"
        android:layout_marginLeft="260dp"
        android:src="@drawable/drop" />


</RelativeLayout>

